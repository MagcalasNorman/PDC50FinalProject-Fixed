<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PDC50FinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PDC50FinalProject"
    xmlns:view="clr-namespace:PDC50FinalProject.View"
    Shell.FlyoutBehavior="Disabled"
    Title="PDC50FinalProject">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        ContentTemplate="{DataTemplate view:StudentList}"
        Route="StudentList" />
    <ShellContent
        ContentTemplate="{DataTemplate view:HomePage}"
        Route="HomePage" />
    <!-- Add CreateStudentPage as a new ShellContent -->
    <ShellContent
        ContentTemplate="{DataTemplate view:CreateStudentPage}"
        Route="CreateStudentPage" />


</Shell>

